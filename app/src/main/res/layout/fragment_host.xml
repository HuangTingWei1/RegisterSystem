<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:tools = "http://schemas.android.com/tools"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:orientation = "vertical"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		tools:context = ".HostFrag">

	<FrameLayout
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			android:layout_weight = "90"
			android:id = "@+id/manageFragContainer"/>

	<com.google.android.material.bottomnavigation.BottomNavigationView
			android:id = "@+id/docbottombar"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:minHeight = "60dp"
			app:itemPaddingTop = "10dp"
			app:itemPaddingBottom = "10dp"
			app:menu = "@menu/docbottom"
			app:itemRippleColor = "#5885AF"
			app:itemActiveIndicatorStyle="@style/Bottom"
			android:background = "@color/md_theme_light_secondaryContainer"
			android:backgroundTint = "@color/md_theme_light_secondaryContainer"
			/>
</LinearLayout>