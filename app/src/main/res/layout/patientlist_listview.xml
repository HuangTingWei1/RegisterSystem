<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent">

	<RelativeLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content">

		<LinearLayout
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginHorizontal = "20dp"
				android:layout_marginVertical = "5dp"
				android:layout_alignParentLeft = "true"
				android:layout_toLeftOf = "@id/patient_list_right_detail"
				android:orientation = "vertical">

			<TextView
					android:id = "@+id/patientlist_name"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:text = "病人1:XXX"
					android:textSize = "25sp"/>

			<TextView
					android:id = "@+id/patientlist_sex"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:text = "性別:X"
					android:textSize = "14sp"
					/>

			<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "wrap_content"
					android:orientation = "horizontal">

				<TextView
						android:id = "@+id/state_not_checkin"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:background = "@drawable/ic_not_checkin"
						android:layout_marginVertical = "5dp"
						android:textSize = "12sp"
						android:layout_marginRight = "10dp"
						/>

				<TextView
						android:id = "@+id/state_not_watch"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:background = "@drawable/ic_not_watch"
						android:textSize = "12sp"
						android:layout_marginVertical = "5dp"/>

			</LinearLayout>
		</LinearLayout>

		<LinearLayout
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_weight = "1"
				android:layout_centerVertical = "true"
				android:id = "@+id/patient_list_right_detail"
				android:layout_alignParentRight = "true"
				android:layout_marginHorizontal = "20dp"
				android:layout_marginVertical = "10dp"
				android:orientation = "vertical">

			<TextView
					android:id = "@+id/patientlist_id"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginVertical = "1dp"
					android:textSize = "14sp"
					android:text = "身分證:AXXXX"/>

			<TextView
					android:id = "@+id/patientlist_watchdate"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginVertical = "1dp"
					android:textSize = "14sp"
					android:text = "掛號日期:YYYY/MM/DD"/>

			<TextView
					android:id = "@+id/patientlist_birthday"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:textSize = "14sp"
					android:layout_marginVertical = "1dp"
					android:text = "出生日期:YYYY/MM/DD"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>