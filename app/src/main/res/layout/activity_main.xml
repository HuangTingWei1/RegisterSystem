<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:tools = "http://schemas.android.com/tools"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:id = "@+id/mainLayout"
		android:background="#EEE"
		tools:context = ".MainActivity">

	<com.google.android.material.appbar.MaterialToolbar
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_alignParentTop = "true"
			android:id = "@+id/mainTopBar"
			android:background = "#E8EEF1"
			android:backgroundTint = "#E8EEF1"
			app:navigationIcon = "@drawable/ic_topbaricon"
			android:paddingStart = "10dp"
			android:padding = "1dp"
			android:textAlignment = "center"
			app:titleCentered="true"
			app:menu = "@menu/main_top_menu"
			/>

	<FrameLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_alignParentBottom = "true"
			android:id = "@+id/mainFrag"
			android:layout_below = "@id/mainTopBar"/>

	<FrameLayout
			android:layout_width = "1px"
			android:layout_height = "1px"
			android:id = "@+id/handCamera"/>


</RelativeLayout>